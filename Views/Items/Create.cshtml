@model SPF.Models.Items.Item

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Тип</label>
                    @Html.DropDownList("TypeName")
                </div>
                <div class="form-group">
                    <label asp-for="LowDescription" class="control-label"></label>
                    <input asp-for="LowDescription" class="form-control" />
                    <span asp-validation-for="LowDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HighDescription" class="control-label"></label>
                    <input asp-for="HighDescription" class="form-control" />
                    <span asp-validation-for="HighDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" data-val="false" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PriceLow" class="control-label"></label>
                    <input asp-for="PriceLow" data-val="false" class="form-control" />
                    <span asp-validation-for="PriceLow" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImgUrl" hidden="hidden" class="control-label"></label>
                    <input asp-for="ImgUrl" hidden="hidden" value="None" class="form-control" />
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImgListUrl" hidden="hidden" class="control-label"></label>
                    <input asp-for="ImgListUrl" hidden="hidden" value="None" class="form-control" />
                    <span asp-validation-for="ImgListUrl" class="text-danger"></span>
                </div>
                <div>
                    <input type="file" name="UploadImg" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
