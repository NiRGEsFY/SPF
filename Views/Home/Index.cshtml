    <div id="leftPartOfMainContent">
    </div>
    <div id="middlePartOfMainContent">
        <div id="mainBlockMerit">
            <div class="partBlockMerit">
                <div class="containerMiniImgInBlockMerit">
                    <img src="~/img/index_img/mini_img_edge.png"
