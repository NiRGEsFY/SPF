@model SPF.Models.UserCreate;
@{
    ViewData["Title"] = "Создание";
    ViewData["CssLink"] = "admin_item_create.css";
}
<div class="itemCreateField">
    <div class="topItemMenu">
        <h1>Создание</h1>

        <h4>Пользователя</h4>
    </div>
    <form class="itemCreateInputField" asp-action="Create" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="itemInputField">
            <label asp-for="UserName" class="control-label"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="itemInputField">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="itemInputField">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="itemInputField">
            <label asp-for="PostUser" class="control-label"></label>
            <input asp-for="PostUser" class="form-control" />
            <span asp-validation-for="PostUser" class="text-danger"></span>
        </div>
        <div class="itemInputField">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="itemInputField">
            <label hidden="hidden" asp-for="Role" class="control-label"></label>
            <input hidden="hidden" asp-for="Role" asp-items="ViewBag.Role" class="form-control" />
            <span hidden="hidden" asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="itemInputButton">
            <input type="submit" value="Создать" class="btn btn-primary" />
        </div>
    </form>
</div>