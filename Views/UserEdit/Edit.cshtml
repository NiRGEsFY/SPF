@model SPF.Models.UserCreate;
@{
    ViewData["Title"] = "Изменение";
    ViewData["CssLink"] = "admin_item_create.css";
}
<div class="itemCreateField">
    <div class="topItemMenu">
        <h1>Редактирование</h1>
        <h4>@Model.FirstName</h4>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form class="itemCreateInputField" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="itemInputField">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="itemInputField">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control"></input>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="itemInputField">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control"></input>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="itemInputField">
                    <label asp-for="PostUser" class="control-label"></label>
                    <input asp-for="PostUser" data-val="false" class="form-control" />
                    <span asp-validation-for="PostUser" class="text-danger"></span>
                </div>
                <div class="itemInputField">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" data-val="false" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="itemInputButton">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="underButton">
        <a asp-controller="UserEdit" asp-action="Index">К Списку</a>
    </div>
